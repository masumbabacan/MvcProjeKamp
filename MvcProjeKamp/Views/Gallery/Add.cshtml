@model Entites.Concrete.ImageFile
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add</h2>

<h1>Yeni Fotoğraf Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("Add", "Gallery", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Fotoğraf Adı ")
        @Html.TextBoxFor(x => x.ImageName, new { @class = "form-control" })
        <br />
        @Html.Label("Fotoğraf Url")
        @Html.TextAreaFor(x => x.ImagePath, new { @class = "form-control" })
        <br />
        <button class="btn btn-info">Kaydet</button>
    </div>
}






















