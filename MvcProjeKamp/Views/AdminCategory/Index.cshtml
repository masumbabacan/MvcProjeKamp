@using Entites.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered">
    <tr>
        <th> #</th>
        <th> Kategorti Adı</th>
        <th> Başlıklar</th>
        <th> Güncelle</th>
        <th> Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
            <td><a href="#" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/AdminCategory/Delete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

<a href="/AdminCategory/Add" class="btn btn-danger">Yeni kategori</a>
